<%- include('partials/header'); -%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1 class="display-4">Welcome to YelpCamp!</h1>
            <p class="lead">View our hand-picked campgrounds from all over the world</p>
            <hr class="my-4">
            <p class="lead">
                <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campgroud</a>
            </p>
        </div>
    </header>

    <div class="row" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(campground){ %>
        <div class="col-md-3 col-sm-6">
            <div class="card">
                <img class="card-img-top" src="<%= campground.image %>" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title"><%= campground.name %></h5>
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
                        card's content.</p>
                    <a href="#" class="btn btn-primary">Veiw Details</a>
                </div>
            </div>
        </div>
        <% });%>
    </div>
</div>
<%- include('partials/footer'); -%>