<%- include('../partials/header')-%>
<section id="new-item-form">
    <div class="container">
        <div class="row">
            <div class="form-container">
                <h1>Add New Question or Review to <%= product.name %></h1>
                <form action="/products/<%= product._id %>/comments" method="POST">
                    <input class="form-control" type="text" name="comment[text]" placeholder="Comment" required>
                    <div class="button-group">
                        <button class="btn bt-lg btn-primary">Submit</button>
                        <a class="btn bt-lg btn-danger" href="/products/<%= product._id %>">Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include('../partials/footer'); -%>