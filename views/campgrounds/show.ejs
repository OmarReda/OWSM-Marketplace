<%- include('../partials/header'); %>
<section id="product">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12">
                <div class="details">
                    <div class="product-name">
                        <h1><%= campground.name %></h1>
                    </div>
                    <hr>
                    <div class="product-image">
                        <img src="<%= campground.image %>">
                    </div>
                    <div class="description">
                        <h5>Description</h5>
                        <p><%= campground.description %></p>
                    </div>
                </div>
                <div class="comments">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add Question
                            or Review</a>
                    </div>
                    <h5>Reviews & Questions</h5>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12 comment-values">
                            <strong><%= comment.author %></strong>
                            <span class="pull-right">10 Days ago</span>
                            <p><%= comment.text %></p>
                        </div>
                    </div>

                    <% }) %>

                </div>
                <a class="btn btn-danger back" href="/campgrounds">Back</a>
            </div>
            <div class="col-lg-3 col-md-12">
                <div class="price">
                    <h3>Price</h3>
                    <hr>
                    <h4>15,000 EGP</h4>
                </div>
                <div class="date">
                    <h5>Date of Creation</h5>
                    <p><%= campground.created.toDateString() %></p>
                </div>
            </div>
        </div>
    </div>
</section>
<%- include('../partials/footer'); %>