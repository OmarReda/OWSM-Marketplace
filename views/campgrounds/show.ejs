<%- include('../partials/header'); %>
<section id="product">
    <div class="container">
        <div class="row">
            <div class="col-lg-9 col-md-12">
                <div class="details">
                    <div class="product-name">
                        <h1><%= campground.name %></h1>
                    </div>
                    <hr>
                    <div class="product-image">
                        <img src="<%= campground.image %>">
                    </div>
                    <div class="description">
                        <h5>Description</h5>
                        <p><%= campground.description %></p>
                    </div>
                </div>
                <div class="comments">
                    <div class="text-right">
                        <a class="btn btn-success" href="/campgrounds/<%= campground._id %>/comments/new">Add Question
                            or Review</a>
                    </div>
                    <h5>Reviews & Questions</h5>
                    <hr>
                    <% campground.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12 comment-values">
                            <strong><%= comment.author.username %></strong>
                            <span class="pull-right">10 Days ago</span>
                            <p><%= comment.text %></p>
                            <%if(currentUser && comment.author.id.equals(currentUser._id)){%>
                            <a class="btn btn-sm btn-warning"
                                href="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>/edit">Edit</a>
                            <form class="delete"
                                action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=DELETE"
                                method="POST">
                                <button class="btn btn-sm btn-danger">Delete</button>
                            </form>
                            <%}%>
                        </div>
                    </div>

                    <% }) %>

                        </div>
                        <a class=" btn btn-dark edit" href="/campgrounds">Back</a>
                        <%if(currentUser && campground.author.id.equals(currentUser._id)){%>
                        <a class="btn btn-warning edit" href="/campgrounds/<%=campground._id%>/edit">Edit</a>
                        <form class="delete" action="/campgrounds/<%=campground._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-danger delete-btn">Delete</button>
                        </form>
                        <% }%>
                    </div>
                    <div class="col-lg-3 col-md-12">
                        <div class="price">
                            <h3>Price</h3>
                            <hr>
                            <h4><%= campground.price %> EGP</h4>
                        </div>
                        <div class="date">
                            <h5>Date of Creation</h5>
                            <p><%= campground.created.toDateString() %></p>
                        </div>
                        <div class="author">
                            <h5>Publisher</h5>
                            <p><strong><%= campground.author.username %></strong></p>
                        </div>
                    </div>
                </div>
            </div>
</section>
<%- include('../partials/footer'); %>