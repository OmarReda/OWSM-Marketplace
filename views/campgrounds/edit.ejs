<%- include('../partials/header')-%>
<section id="new-item-form">
    <div class="container">
        <div class="row">
            <div class="form-container">
                <h1>Edit <%=campground.name%></h1>
                <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
                    <input class="form-control" type="text" name="campground[name]" value="<%=campground.name%>"
                        required>
                    <input class="form-control" type="text" name="campground[image]" value="<%=campground.image%>"
                        required>
                    <input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>"
                        min="0.0" step="100" required>
                    <textarea class="form-control" type="text" name="campground[description]"
                        required><%=campground.description%></textarea>
                    <div class="button-group">
                        <button class="btn bt-lg btn-primary">Update</button>
                        <a class="btn bt-lg btn-danger" href="/campgrounds/<%=campground._id%>">Go Back</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
<%- include('../partials/footer'); -%>